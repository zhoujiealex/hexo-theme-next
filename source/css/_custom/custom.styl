.post-comments-count a, .footer a, .tag-cloud-tags a {
  text-decoration: none;
  border-bottom: none;
  
  &:hover {
    color: $karl-link-hover-color !important;
  }
}

.footer .footer-inner {
    text-align: center;
}

#posts article{
  h2, h3, h4, h5, h6 {
      padding-left: .5em;
      border-left: 4px solid #2d96bd;
      padding-top: 1px;
      margin: .3em 0;
  }
}

.post-button .btn {
    display: inline-block;
    padding: 0 20px;
    font-size: 15px;
    color:  #fff;
    background: $karl-link-color;
    border: 2px solid $karl-link-color;
    transition-property: background-color;
    transition-duration: .2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    
    &:hover {
    background: #fff;
    color: $karl-link-hover-color;
    border: 2px solid $karl-link-hover-color;
  }
}


.posts-expand .post-title-link, .posts-collapse .post-title a {
  &:hover {
    color: $karl-link-hover-color !important;
  }
}

.posts-expand .post-tags a {
  &:hover {
    color: $karl-link-hover-color !important;
    background: #e0e0e0;
  }
}

.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $black-light;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color:  $karl-link-hover-color;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }

  .fa { font-size: 16px; }
}

